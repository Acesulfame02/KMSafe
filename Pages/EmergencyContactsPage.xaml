<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Safe.ViewModel"
             x:Class="Safe.Pages.EmergencyContactsPage"
             Title="Emergency Contacts">
    <ContentPage.BindingContext>
        <vm:EmergencyContactsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <Label Text="Hostel Contacts" FontSize="Medium" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding HostelContacts}" ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedHostelContact}" Title="Select a Hostel Contact" />

            <Label Text="Clinic Contacts" FontSize="Medium" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding ClinicContacts}" ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedClinicContact}" Title="Select a Clinic Contact" />
        </StackLayout>
    </ScrollView>
</ContentPage>
